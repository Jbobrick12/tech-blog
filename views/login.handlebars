
<div class="card col-5 m-2 align-items-center p-2">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
        <div class="form-group">
            <label for="username-login">Username</label>
            <input class="form-input username-login" type="text" id="name-login" />
        </div>
        <div class="form-group">
            <label for="password-login">Password</label>
            <input class="form-input password-login" type="password" id="password-login" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Log In</button>
        </div>
    </form>
</div>
<div class="card col-5 m-2 align-items-center p-2">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
        <div class="form-group">
            <label for="username-signup">Username</label>
            <input class="form-input username-signup" type="text" id="name-signup" />
        </div>
        <div class="form-group">
            <label for="password-signup">Password</label>
            <input class="form-input password-signup" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </div>
    </form>
</div>

